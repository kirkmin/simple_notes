<h1>Note</h1>

<form>
  <fieldset>
    <div>
      <label for="name">Title</label>
        <input id="name" name="name" type="text" value='<%= note.escape('name') %>'>
    </div>

    <input id="time" name="time" type="hidden" value='<%= Date.now() %>'>

    <div>
      <label for="body">Notes</label>
        <input id="body" name="body" type="text" value='<%= note.escape('body') %>'>
    </div>


    <button class="submit">Submit</button>
    <a href='#/'>Back to Index</a>
  </fieldset>
</form>